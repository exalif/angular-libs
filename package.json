{
  "name": "angular-libs",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:all": "concurrently --kill-others -s \"first\" \"npm run upload-server:dev\" \"npm run start\"",
    "build:demo": "ng build angular-libs-demo --prod",
    "build:ngx-breadcrumbs": "ng build ngx-breadcrumbs",
    "build:ngx-test-utils": "ng build ngx-test-utils",
    "build:ngx-file-upload": "ng build ngx-file-upload",
    "build:ngx-k-code": "ng build ngx-k-code",
    "test": "jest --colors  --coverage",
    "test:ci": "jest --colors --coverage --silent",
    "test:watch": "jest --watch --colors --verbose false",
    "lint": "ng lint",
    "upload-server": "node ./server/index.js",
    "upload-server:dev": "cd ./server && NODE_ENV=development nodemon ."
  },
  "dependencies": {
    "@angular/animations": "8.0.1",
    "@angular/common": "8.0.1",
