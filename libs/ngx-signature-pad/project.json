{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "ngx-signature-pad",
  "projectType": "library",
  "sourceRoot": "libs/ngx-signature-pad/src",
  "prefix": "lib",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "outputPath": "dist/libs/ngx-signature-pad",
      "options": {
        "project": "libs/ngx-signature-pad/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngx-signature-pad/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngx-signature-pad/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs ngx-signature-pad useGlobalVersion {args.tag} {args.otp}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/ngx-signature-pad/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/ngx-signature-pad/**/*.ts",
          "libs/ngx-signature-pad/**/*.html"
        ]
      }
    }
  }
}
