{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheDirectory": ".nxcache",
        "cacheableOperations": [
          "build",
          "lint",
          "test"
        ]
      }
    }
  },
  "defaultBase": "main",
  "namedInputs": {
    "sharedGlobals": [
      "!{workspaceRoot}/dist",
      "!{workspaceRoot}/tmp"
    ],
    "default": [
      "sharedGlobals",
      "{projectRoot}/src/**/*.ts",
      "{projectRoot}/**/*.json"
    ],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/src/test-setup.ts"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/.eslintrc.json",
        "{projectRoot}/.eslintrc.json"
      ]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js",
        "{projectRoot}/jest.config.ts",
        "{projectRoot}/src/*.spec.ts",
        "{projectRoot}/tsconfig.spec.json",
        "{projectRoot}/src/test-setup.ts"
      ]
    }
  },
  "generators": {
    "@nx/angular:application": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "none"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "css"
    }
  }
}